#--- $Id: make.osf1.alpha.gnu.opt,v 1.1 2007/09/21 13:32:04 bzfpfend Exp $
FLAGS		+=      -DNDEBUG
OFLAGS		+=	-O6 -mcpu=ev6 -g
CFLAGS		+=	$(GCCWARN) -Wno-strict-aliasing -Wno-missing-declarations -Wno-missing-prototypes
CXXFLAGS	+=	$(GXXWARN) -Wno-strict-aliasing # -fno-exceptions (CLP uses exceptions)
ARFLAGS		=	crs
LDFLAGS		+=	-lcurses # -static -lreadline
ZLIB_FLAGS	=
ZLIB_LDFLAGS 	=	-lz
READLINE_FLAGS	=
READLINE_LDFLAGS=
