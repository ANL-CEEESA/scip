CC		=	cc
CXX		=	CC
FLAGS		+=	-DWITH_READLINE -DNDEBUG -I/client/include
CFLAGS		+=	-fast -xprefetch=auto -xipo=2
CXXFLAGS	+=	-fast -xprefetch=auto -xipo=2
AR		=	CC
ARFLAGS		=	$(FLAGS) $(CXXFLAGS) -xar -o
LDFLAGS		+=	-L/client/lib -lreadline -lncurses -lsocket -lnsl
